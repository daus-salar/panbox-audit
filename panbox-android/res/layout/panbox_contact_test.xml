<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1" >

    <Button
        android:id="@+id/createAccountBtn"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:text="CreateAccount" />

    <Button
        android:id="@+id/deleteAccountBtn"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="0"
        android:text="DeleteAccount" />

    <Button
        android:id="@+id/addContactBtn"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="0"
        android:text="AddContact" />

    <Button
        android:id="@+id/delContactBtn"
        android:layout_column="0"
        android:layout_gravity="right|center_vertical"
        android:layout_row="0"
        android:text="DeleteContact" />

    <Button
        android:id="@+id/createIdentityBtn"
        android:layout_gravity="left"
        android:text="CreateIdentity" />

    <Button
        android:id="@+id/deleteIdentityBtn"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="1"
        android:text="DeleteIdentity" />

    <Button
        android:id="@+id/loadIdentityBtn"
        android:layout_gravity="left"
        android:text="LoadIdentity" />

    <Button
        android:id="@+id/exportContactsButton"
        android:layout_column="0"
        android:layout_gravity="right|bottom"
        android:layout_row="0"
        android:text="ExportContacts" />

    <Button
        android:id="@+id/importContactsBtn"
        android:layout_column="0"
        android:layout_gravity="left|bottom"
        android:layout_row="0"
        android:text="ImportContacts" />

</GridLayout>