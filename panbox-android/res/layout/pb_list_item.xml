<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/pb_list_item_container"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:padding="10dip">
	
		<ImageView 
	 	   	android:id="@+id/pb_list_item_icon"
	 	   	android:layout_width="wrap_content"
		   	android:layout_height="wrap_content"
		    android:contentDescription="@string/list_icon_desc"/>
		
		<LinearLayout 
		    android:id="@+id/pb_list_item_text_container"
		    android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_toEndOf="@id/pb_list_item_icon"
			android:layout_alignParentBottom="true"
			android:layout_marginStart="10dip">
			
			<TextView 
			    android:id="@+id/pb_list_item_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>
			
			<TextView 
			    android:id="@+id/pb_list_item_desc"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/grey"
				android:textSize="12sp"/>
			
		</LinearLayout>
</RelativeLayout>
