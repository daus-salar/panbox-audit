<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/pb_nfc_identity_visualization_noticeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="10dip"
        android:text="@string/pb_identity_visualization_notice"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"/>

     <RelativeLayout
        android:id="@+id/tableContainer"
        android:layout_width="match_parent"
   	 	android:layout_height="wrap_content"
   	 	android:padding="5dp"
   	 	android:layout_margin="5dip"
   	 	android:background="@drawable/rounded_corners_drawable_bg">
	    
	    <TableLayout
	        android:id="@+id/pb_nfc_receive_info_table"
	   	 	android:layout_width="wrap_content"
	   	 	android:layout_height="wrap_content"
	   	 	android:layout_marginTop="3dip">
		</TableLayout>
	</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <im.delight.android.identicons.SymmetricIdenticon
            android:id="@+id/pb_identityHashViewSig"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="5dp" 
            android:background="@drawable/rounded_corners_drawable_bg"/>

        <im.delight.android.identicons.SymmetricIdenticon
            android:padding="3dip"
            android:id="@+id/pb_identityHashViewEnc"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="5dp" 
            android:background="@drawable/rounded_corners_drawable_bg"/>

    </LinearLayout>
    
</LinearLayout>
